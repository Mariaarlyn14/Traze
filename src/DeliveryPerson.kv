<DeliveryPersonHomepage>:
    MDFloatLayout:
        md_bg_color: 246, 250, 255, 255
    
        ProfileCard:
            size_hint_y: 0.1
            pos_hint: {"center_y": .95}
            md_bg_color: 0, 0, 0, 1

            MDLabel:
                text: "Delivery Tasks"
                font_size: "20sp"
                pos_hint: {"x": 0.07, "y": 0.05}
                color: rgba (255, 255, 255, 250)

            MDIconButton:
                icon: "account-circle"
                pos_hint:{"x": 0.8, "y": 0.07}
                icon_size: "27sp"
                theme_text_color: "Custom"
                text_color: rgba (255, 255, 255, 250)
                on_release:
                    app.root.current = "ProfilePage_DeliveryPerson"
                    root.manager.transition.direction = 'left'
        
        FloatLayout:
            orientation: "vertical"
            size_hint: 0.7, 0.9
            pos_hint:{"x": 0.5, "y": 0.52}
            ScrollView:
            MDList:
                id: tracking_list


<Delivery_Info>:
    FloatLayout:
        md_bg_color: 246, 250, 255, 255
    
        ProfileCard:
            size_hint_y: 0.1
            pos_hint: {"center_y": .95}
            md_bg_color: 0, 0, 0, 1

            MDIconButton:
                icon: "arrow-left"
                pos_hint:{"center_y": 0.5}
                user_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba (255, 255, 255, 250)
                on_press:
                    root.on_back()
                on_release:
                    app.root.current = "DeliveryPersonHomepage"
                    root.manager.transition.direction = 'right'

            MDLabel:
                text: "DELIVERY INFORMATION"
                font_size: "20sp"
                pos_hint: {"x": 0.13, "center_y": 0.5}
                color: rgba (255, 255, 255, 250)

        FloatLayout:
            size_hint: 0.7, 0.8
            id: tracking_info_layout

<ProfilePage_DeliveryPerson>:
    MDFloatLayout:
        md_bg_color: 246, 250, 255, 255
    
        ProfileCard:
            size_hint_y: 0.1
            pos_hint: {"center_y": .95}
            md_bg_color: 0, 0, 0, 1
   
            MDIconButton:
                icon: "arrow-left"
                pos_hint:{"center_y": 0.5}
                user_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba (255, 255, 255, 250)
                on_release:
                    app.root.current = "DeliveryPersonHomepage"
                    root.manager.transition.direction = 'right'
        
        MDRaisedButton:
            text: "Log Out"
            md_bg_color: 0, 0, 0, 1
            font_size: "12sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.15}
            text_color: rgba(255, 255, 255, 255)
            on_press:
                root.logout()
            on_release:
                app.root.current = "fScreen"